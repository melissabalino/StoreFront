@model StoreFront.Data.EF.Models.Order
@{
    ViewData["Title"] = "Checkout";
}


<h1>Checkout</h1>


<hr />
<h4>Order Total: @ViewBag.Total</h4>
<div class="row">

    <div class="col-md-6 mx-auto rounded shadow">
        <form asp-action="SubmitOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" value="@ViewBag.UserId" />
            <input type="hidden" asp-for="OrderDate" value="@DateTime.Now" />
            <div class="form-group">
                <label asp-for="ShipToName" class="control-label"></label>
                <input asp-for="ShipToName" class="form-control" />
                <span asp-validation-for="ShipToName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShipToCity" class="control-label"></label>
                <input asp-for="ShipToCity" class="form-control" />
                <span asp-validation-for="ShipToCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShipToState" class="control-label"></label>
                <input asp-for="ShipToState" class="form-control" />
                <span asp-validation-for="ShipToState" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShipToZip" class="control-label"></label>
                <input asp-for="ShipToZip" class="form-control" />
                <span asp-validation-for="ShipToZip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="TiledProducts" asp-controller="Products">Back to Products</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
