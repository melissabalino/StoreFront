@{
    ViewData["Title"] = "Home Page";
}

@section Hero {
    <!-- ======= Hero Section ======= -->
    <section id="hero">
        <div class="hero-container">
            <div id="heroCarousel" data-bs-interval="5000" class="carousel slide carousel-fade" data-bs-ride="carousel">

                <ol class="carousel-indicators" id="hero-carousel-indicators"></ol>

                <div class="carousel-inner" role="listbox">

                    <!-- Slide 1 -->
                    <div class="carousel-item active" style="background-image: url(assets/img/slide/sdv_titleart_1920x1080.png)">
                        <div class="carousel-container">
                            <div class="carousel-content">
                                <h2 class="animate__animated animate__fadeInDown">Welcome to <span>All Things Stardew Valley</span></h2>
                                <p class="animate__animated animate__fadeInUp">Your one stop shop for all things related to Stardew Valley. Browse through our carefully curated collections.</p>
                                <a href="" class="btn-get-started animate__animated animate__fadeInUp">Shop</a>
                            </div>
                        </div>
                    </div>

                    <!-- Slide 2 -->
                    <div class="carousel-item" style="background-image: url(assets/img/slide/sdv_titleart_1920x1080.png)">
                        <div class="carousel-container">
                            <div class="carousel-content">
                                <h2 class="animate__animated fanimate__adeInDown">About the <span>Valley</span></h2>
                                <p class="animate__animated animate__fadeInUp">Learn about this award winning valley created by ConcernedApe.</p>
                                <a href="" class="btn-get-started animate__animated animate__fadeInUp">Read More</a>
                            </div>
                        </div>
                    </div>

                    <!-- Slide 3 -->
                    <div class="carousel-item" style="background-image: url(assets/img/slide/sdv_titleart_1920x1080.png)">
                        <div class="carousel-container">
                            <div class="carousel-content">
                                <h2 class="animate__animated animate__fadeInDown">View our <span>Testimonials</span></h2>
                                <p class="animate__animated animate__fadeInUp">From the residents themselves!</p>
                                <a href="" class="btn-get-started animate__animated animate__fadeInUp">Read More</a>
                            </div>
                        </div>
                    </div>

                </div>

                <a class="carousel-control-prev" href="#heroCarousel" role="button" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon bi bi-chevron-left" aria-hidden="true"></span>
                </a>

                <a class="carousel-control-next" href="#heroCarousel" role="button" data-bs-slide="next">
                    <span class="carousel-control-next-icon bi bi-chevron-right" aria-hidden="true"></span>
                </a>

            </div>
        </div>
    </section><!-- End Hero -->
}

<main id="main">

    <!-- ======= Featured Section ======= -->
    <section id="featured" class="featured">
        <div class="container">

            <div class="row">
                <div class="col-lg-4">
                    <div class="icon-box">
                        <i class="bi bi-card-checklist"></i>
                        <h3><a href="">Grocery</a></h3>
                        <p>Shop the freshest produce!</p>
                    </div>
                </div>
                <div class="col-lg-4 mt-4 mt-lg-0">
                    <div class="icon-box">
                        <i class="bi bi-bar-chart"></i>
                        <h3><a href="">Lawn & Garden</a></h3>
                        <p>Is it time to level up your lawn & garden? Shop our best quality seeds and fertilizers here!</p>
                    </div>
                </div>
                <div class="col-lg-4 mt-4 mt-lg-0">
                    <div class="icon-box">
                        <i class="bi bi-binoculars"></i>
                        <h3><a href="">Home Improvement</a></h3>
                        <p>Looking to make upgrades to your home? Check out our award-winning wallpaper selections!</p>
                    </div>
                </div>
            </div>

        </div>
    </section><!-- End Featured Section -->
    <!-- ======= About Section ======= -->
    <section id="about" class="about">
        <div class="container">

            <div class="row">
                <div class="col-lg-6">
                    <img src="~/assets/img/about.jpg" class="img-fluid" alt="">
                </div>
                <div class="col-lg-6 pt-4 pt-lg-0 content">
                    <h3>All Things Stardew Valley</h3>
                    <p class="fst-italic">
                        DISCLAIMER: Please note - All Things Stardew Valley is a MOCK e-commercial site, intended to showcase the ability to create and implement a storefront. This project demonstrates the following proficiencies:
                    </p>
                    <ul>
                        <li><i class="bi bi-check-circle"></i> .NET Core MVC</li>
                        <li><i class="bi bi-check-circle"></i> C# </li>
                        <li><i class="bi bi-check-circle"></i> SQL</li>
                        <li><i class="bi bi-check-circle"></i> Bootstrap</li>
                    </ul>
                    <p>
                        This StoreFront portfolio project was created while enrolled in the Full Stack Coding Program at Centriq IT Career Training. Enjoy!
                    </p>
                </div>
            </div>

        </div>
    </section><!-- End About Section -->
