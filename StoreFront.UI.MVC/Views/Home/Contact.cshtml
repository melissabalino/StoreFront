@model StoreFront.UI.MVC.Models.ContactViewModel

@{
    ViewData["Title"] = "Contact";
}

<!-- ======= Contact Section ======= -->
<section id="contact" class="contact">
    <div class="container text-center">
        <div class="row">
            <div class="col-lg-12 mt-4">
                <h3>Contact Us</h3>
            </div>
            <div class="col-lg-3 mt-6 my-3">
                <img src="~/assets/img/Farm_Computer.png" alt="Farm Computer" height="300px">
            </div>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="row">
                    <p style="color: red; font-style: italic;">
                        @Html.Raw(ViewBag.ErrorMessage)
                    </p>
                </div>
            }



            <div class="col-lg-9 mt-4">
                <form asp-action="Contact" class="php-email-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6 form-group">
                            <input asp-for="Name" class="form-control" id="name" placeholder="Name" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6 mt-3 mt-md-0">
                            <input asp-for="Email" class="form-control" id="email" placeholder="Email" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <input asp-for="Subject" class="form-control" id="subject" placeholder="Subject" required />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <textarea asp-for="Message" class="form-control" rows="5" placeholder="Message" required></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-4 text-center">
                        <input type="submit" value="Send Message" class="btn btn-primary mt-3" />
                    </div>
                </form>
            </div>


        </div>
    </div>





</section><!-- End Contact Section -->
  </main><!-- End #main -->
