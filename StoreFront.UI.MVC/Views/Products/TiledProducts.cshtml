@model IEnumerable<StoreFront.Data.EF.Models.Product>

@{
    ViewData["Title"] = "Tiled Products";
}
<div class="pt-3" style="text-align: center;">
    <h1>Our Products</h1>
    <p align="center">
        @if (User.IsInRole("Admin"))
        {
        <a asp-action="Create">Add New Product</a>
        <a asp-action="Index">Table View</a>
        }
    </p>
</div>
<div class="row">
    <div class="offset-3 col-md-6">
        <form asp-action="TiledProducts" method="get">
            <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="form-control text-center" placeholder="Search Products..."/>

            <label for="categoryId" class="control-label d-block text-center">Filter By Category</label>
            <select name="categoryId" class="form-control text-center mb-3" asp-items="@ViewBag.CategoryId">
                <option value="0">[Search by Category]</option>
            </select>

            <button type="submit" class="btn btn-primary text-center mx-auto w-50 d-block">Search</button>
        </form>

        @if (ViewBag.NbrResults != null)
        {
            <p class="mt-5 p-2 alert-warning text-center">

            </p>
        }
    </div>
</div>
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="mx-auto pt-3 pb-3 col-sm-4 col-md-3 col-lg-2 col-centered text-center border" style="border-radius: 25px 25px;">
                <div class="box">
                    <div class="option_container">

                        <div class="img-box">
                            <img src="~/assets/img/products/@item.ProductImage" alt="@item.ProductName" longdesc="@item.ProductDescription" />
                        </div>
                        <div class="options">
                            <a asp-action="Details" asp-route-id="@item.ProductId" class="option1">
                                @item.ProductName
                            </a>
                        </div>

                        <div class="detail-box">

                            <h6>
                                @Html.DisplayFor(modelItem => item.ProductPrice)
                            </h6>
                            <a asp-action="AddToCart" asp-controller="ShoppingCart" asp-route-id="@item.ProductId" class="option2 btn btn-warning">
                                Add to Cart
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</div>


