@model StoreFront.Data.EF.Models.Product

@{
    ViewData["Title"] = "Details";
}

<div style="text-align: center;">
    <h1>@Model.ProductName Details</h1>
</div>

<div class="row mb-3">
    <div class="col-md-6 offset-md-3 text-center">
        <img src="~/assets/img/products/@Model.ProductImage" alt="@Model.ProductName" longdesc="@Model.ProductDescription" class="img-fluid" width="48" height="48" />
        <p class="text-info mt-3">
            @Html.DisplayFor(model => model.ProductName)
        </p>
    </div>

    <div class="offset-md-3 col-md-3">
        <p>
            <strong>@Html.DisplayNameFor(model => model.ProductPrice) :</strong>
            @Html.DisplayFor(model => model.ProductPrice)
        </p>
    </div>

</div>



