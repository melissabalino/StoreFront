    ======================================================== -->
</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="d-flex align-items-center">
        <div class="container d-flex justify-content-between align-items-center">

            <div class="logo">
                @*<h1><a href="@Url.Action("Index","Home")">All Things Stardew Valley</a></h1>*@
                <!-- Uncomment below if you prefer to use an image logo -->
                <a href="@Url.Action("Index","Home")"><img src="~/assets/img/SDV_logo_3x.png" alt="Stardew Valley Logo" class="img-fluid"></a>
            </div>

            <nav id="navbar" class="navbar">
                <ul>
                    <li><a class="active" href="@Url.Action("Index","Home")">Home</a></li>
                    
                    <li><a href="@Url.Action("About","Home")">About</a></li>
                   
                    <li class="dropdown">
                        <a href="@Url.Action("TiledProducts", "Products")"><span>Shop</span> <i class="bi bi-chevron-down"></i></a>
                        <ul>
                            <li><a href="#">Lawn & Garden</a></li>
                            <li><a href="#">Grocery</a></li>
                            <li><a href="#">Home Improvement</a></li>
                            <li><a href="#">Tools</a></li>
                            <li><a href="#">Special Goods</a></li>
                            <li><a href="#">Weapons</a></li>
                            <li><a href="#">Accessories</a></li>
                            <li><a href="#">Clothing</a></li>
                            <li><a href="#">Resources</a></li>
                            <li><a href="#">Livestock</a></li>
                            <li><a href="@Url.Action("TiledProducts", "Products")">Shop All</a></li>
                        </ul>
                    </li>
                   @if (signInManager.IsSignedIn(User))
                    {
                        
                    <li><a href="@Url.Action("Index", "Orders")">Orders</a></li>
                    }

                    <li><a href="@Url.Action("Index","ShoppingCart")"><i class="bi bi-cart" style="font-size: 18px"></i></a></li>


                    @if (User.IsInRole("Admin"))
                    {
                        
                    <li class="dropdown">
                        <a href="#"><span>Manage</span> <i class="bi bi-chevron-down"></i></a>
                        <ul>
                            <li><a asp-action="ListUsers" asp-controller="Administration">Users</a></li>
                            <li><a asp-action="ListRoles" asp-controller="Administration">Roles</a></li>
                            <li><a asp-action="Index" asp-controller="Categories">Categories</a></li>
                            <li><a href="@Url.Action("Index", "Merchants")">Merchants</a></li>
                            <li><a href="@Url.Action("Index", "ProductStatus")">Product Status</a></li>
                            <li><a href="@Url.Action("Index", "SeasonalAvailabilities")">Seasonal Availabilities</a></li>
                        </ul>
                    </li>
                    }
                   

                    <li><partial name="_LoginPartial" /></li>
                                           
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

        </div>
    </header><!-- End Header -->
    @RenderSection("Hero",false)

    @RenderBody()

    <!-- ======= Footer ======= -->
    <footer id="footer">

        <div class="footer-top">
            <div class="container">
                <div class="row">

                    <div class="col-lg-3 col-md-6 footer-links">
                        <h4>Useful Links</h4>
                        <ul>
                            <li><i class="bx bx-chevron-right"></i> <a href="@Url.Action("Index","Home")">Home</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="@Url.Action("About","Home")">About us</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="@Url.Action("TiledProducts","Products")">Shop</a></li>
                           </ul>
                           </div>
                    <div class="col-lg-3 col-md-6 footer-links">
                        <br /><br />
                           <ul>
                            <li><i class="bx bx-chevron-right"></i> <a href="contact.html">Contact Us</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="#">Terms of service</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="#">Privacy policy</a></li>
                        </ul>
                    </div>

                    <div class="col-lg-6 col-md-12 footer-info">
                        <h3>About All Things Stardew Valley Shop</h3>
                        <p><strong>DISCLAIMER:</strong>This website is a MOCK storefront with content based on the award-winning game, Stardew Valley, developed by ConcernedApe. This is not a real store and items shown are not actually available for purchase. </p>
                    
                    </div>

                </div>
            </div>
        </div>

        <div class="container">
            <div class="copyright">
                &copy; Copyright <strong><span>Melissa Balino</span></strong>. All Rights Reserved
            </div>
            <div class="credits">
                <!-- All the links in the footer should remain intact. -->
                <!-- You can delete the links only if you purchased the pro version. -->
                <!-- Licensing information: https://bootstrapmade.com/license/ -->
                <!-- Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/eterna-free-multipurpose-bootstrap-template/ -->
                Designed using <a href="https://bootstrapmade.com/">BootstrapMade</a>
            </div>
        </div>
    </footer><!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/assets/vendor/waypoints/noframework.waypoints.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/assets/js/main.js"></script>

    @RenderSection("Scripts", false)

</body>

</html>